<label class="label has-text-centered"><b>Temperature Forecast</b></label>
<div class="columns is-centered">  
  <div class="column is-three-quarters">
    <div class="box" id="chart"></div>
    <script>
      const data = {
        labels: [
          {{#each trends.trendLabels}}
            "{{this}}",
          {{/each}}
        ],
        datasets: [
          {
            name: "Â°C", type: "line",
            values: [
              {{#each trends.tempTrend}}
                {{this}},
              {{/each}}
            ]
          }
        ]
      }
      new frappe.Chart("#chart", {
        data: data,
        type: "line",
        height: 180,
        colors: ["blue"]
      });
    </script>
  </div>
</div>
