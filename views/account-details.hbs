{{> menu active="accountdetails"}}

<section class="content box">
  <div class="columns is-centered">
    <div class="column is-4">
      <form action="/modifyaccount" method="POST">
        <h2 class="subtitle has-text-centered">
          Current Account Details
        </h2>
        <div class="columns is-multiline">
          <div class="column is-3">
            First Name:
          </div>
          <div class="column is-3">
            {{user.firstname}}
          </div>
          <div class="column is-3">
            Surname:
          </div>
          <div class="column is-3">
            {{user.surname}}
          </div>
          <div class="column is-3">
            Email:
          </div>
          <div class="column is-3">
            {{user.email}}
          </div>
          <div class="column is-3">
            Password:
          </div>
          <div class="column is-3">
            {{user.password}}
          </div>
        </div>
        <h2 class="subtitle has-text-centered">
          Modify Account Details
        </h2>
        <div class="field is-horizontal field-body has-text-centered">
          <div class="field">
            <label class="label">First Name:</label>
            <p class="control is-expanded">
              <input class="input" type="text" placeholder="John" name="firstname">
            </p>
          </div>
          <div class="field">
            <label class="label">Surname:</label>
            <p class="control">
              <input class="input" type="text" placeholder="Smith" name="surname">
            </p>
          </div>
        </div>
        <div class="field is-horizontal field-body has-text-centered">
          <div class="field">
            <label class="label">Email:</label>
            <input class="input" placeholder="test@test.com" name="email">
          </div>
          <div class="field">
            <label class="label">Password:</label>
            <input class="input" placeholder="test" type="password" name="password">
          </div>
        </div>
        <div class="columns is-centered">
          <div class="column is-narrow">
            <button class="button is-link is-info">Modify</button>
          </div>
        </div>
      </form>
    </div>
    <div class="column is-1"></div>
    <div class="column is-5">
      <section class="box">
        <figure class="image is-square">
          <img src="https://cdn.glitch.global/a954a553-344c-45c4-ab75-9002fdc69939/weather2.jpg?v=1691579047407" alt="Road lined with trees, with fog in the distance">
        </figure>
      </section>
    </div>
  </div>
</section>